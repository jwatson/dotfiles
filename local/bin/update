#!/usr/bin/env zsh

set -euo pipefail
IFS=$'\n\t'

brew update
brew upgrade
brew cask upgrade
brew cleanup

#nvim +PlugUpgrade +qall
#nvim +PlugUpdate +qall

# zplug update

rustup update

pip3 install \
     -U \
     --user \
     black \
     pynvim \
     'python-language-server[pyflakes,pycodestyle,pydocstyle]' \
     pyls-mypy \
     pyls-isort \
     pyls-black

poetry self:update
