#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

brew update
brew upgrade
brew cleanup

nvim +PlugUpgrade +qall
nvim +PlugUpdate +qall

rustup update

pip3 install \
     -U \
     --user \
     black \
     neovim \
     poetry \
     'python-language-server[pyflakes,pycodestyle,pydocstyle,yapf]' \
     pyls-mypy \
     pyls-isort
